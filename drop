                send "{@tag}&0 Wegiel:&7 {@wegiel3}                           &aPlugin &cby &bukasiu"
                send "{@tag}&4 Redstone:&7 {@redstone3}                       &aPlugin &cby &bukasiu"
                send "{@tag}&1 Lapis lazuli:&7 {@lapis3}               &aPlugin &cby &bukasiu"
                send " "
